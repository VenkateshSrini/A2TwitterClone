@page
@model A2.TwitterClone.UI.TweetModel
@{
    ViewData["Title"] = "Tweet";
}

<h1>Tweet</h1><br />

<a asp-page="./AddTweet">Add Tweet</a>
<table>
    @foreach (var tweet in Model.TweetsByUser)
    {
        <tr>
            <td>
                <textarea readonly="readonly">@tweet.Squeeks</textarea>
            </td>
            <td>
                <a asp-page="./EditTweet" asp-route-tweetId="@tweet.Id">Edit</a>
            </td>
        </tr>
    }
    <tr>

    </tr>
</table>
