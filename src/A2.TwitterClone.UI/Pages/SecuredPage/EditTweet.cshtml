@page
@model A2.TwitterClone.UI.EditTweetModel
@{
    ViewData["Title"] = "EditTweet";
}

<h1>EditTweet</h1>

<form method="post" id="EditTweetFrm">
    <div asp-validation-summary="All"></div>
    <div>

        <textarea asp-for="Tweets"> </textarea>
        <span asp-validation-for="Tweets"></span>
    </div>
    <input type="submit" class="link-button" value="Edit Tweets" /> &nbsp; &nbsp;&nbsp;
    <a  class="link-button" style="text-decoration: none;" value="Cancel" asp-page="./Tweet" asp-route-id="@ViewData["TweetId"]">Cancel</a>
</form>