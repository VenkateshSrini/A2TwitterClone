@model A2.TwitterClone.UI.AddTweetModel
@{
    ViewData["Title"] = "AddTweet";
}

<h1>AddTweet</h1>
<form method="post" id="AddTweetFrm">
    <div asp-validation-summary="All"></div>
    <div>
    
        <textarea asp-for="Tweets"> </textarea>
        <span asp-validation-for="Tweets"></span>
    </div>
    <input type="submit" class="link-button" value="Add Tweets" /> &nbsp; &nbsp;&nbsp;
    <a style="" class="link-button" value="Cancel" asp-page="./Tweet" >Cancel</a>
</form>

