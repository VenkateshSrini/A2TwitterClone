@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TwitterClone</title>
    <link rel="stylesheet" href="~/bundle.css" />
    
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <a href="/">Squeek</a>
                </p>
            </div>
        </div>
    </header>
    <div id="body">
        <section class="featured">
            <div class="content-wrapper">
                
            </div>
            <div class="float-left">
                <br />
                <br/>
                
                <ul id="menu" style="align-content:safe center;margin-left: 200px;">


                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-page="/SecuredPage/Tweet">Tweet</a></li>
                        <li><a asp-page="/SecuredPage/ModifyUser">Edit Profile Info</a></li>
                        <li><a asp-page="/SecuredPage/Following">Friends</a></li>
                        <li><a asp-page="/SecuredPage/Signout">Logout</a></li>
                        <li><a asp-page="/SecuredPage/DeleteUser">Delete Me</a></li>
                    }
                    else
                    {
                        <li><a asp-page="/Register">Register</a></li>
                        <li><a asp-page="/Account/Login">Login</a></li>
                    }
                </ul>
            </div>
        </section>
        <section class="content-wrapper main-content clear-fix">
        

        </section>

    </div>
    @RenderBody()

    @RenderSection("Scripts", required: false)
    <script src="~/bundle.js"></script>


</body>
</html>
